{
  "$id": "https://hydra.ugent.be/schema/resto/sandwiches",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sandwiches",
  "description": "Structure of the sandwich file. Note: this is not API documentation; do not rely on it.",
  "type": "array",
  "items": {
    "type": "object",
    "description": "A sandwich.",
    "required": [
      "name",
      "ingredients",
      "price_medium",
      "price_small"
    ],
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the sandwich.",
        "examples": ["Brie"]
      },
      "ingredients": {
        "type": "array",
        "description": "A list of the ingredients in the sandwich.",
        "items": {
          "type": "string"
        },
        "examples": [[
          "ham",
          "asperge",
          "sla"
        ]]
      },
      "price_medium": {
        "type": "string",
        "description": "The (textual) price in euros for a normal sandwich.",
        "examples": ["2.70"]
      },
      "price_small": {
        "type": "string",
        "description": "The (textual) price in euros for a small sandwich.",
        "examples": ["1.60"]
      }
    }
  }
}